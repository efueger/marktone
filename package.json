    "prettier": "prettier --check 'src/**/*.{ts,tsx,scss}'",
    "lint": "npm run eslint && npm run prettier",
    "lint:fix": "npm run eslint -- --fix src && npm run prettier -- --write",
    "test": "echo \"Error: no test specified\" && exit 1"
  },
