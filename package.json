  },
  "homepage": "https://github.com/ganta/chrome-extension-marktone#readme",
  "devDependencies": {
    "@cybozu/eslint-config": "8.1.0",
    "@types/chrome": "0.0.91",
    "@typescript-eslint/eslint-plugin": "2.9.0",
