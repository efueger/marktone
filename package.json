    "webpack": "4.41.2",
    "webpack-cli": "3.3.10"
  },
  "dependencies": {
    "@types/dompurify": "2.0.0",
    "@types/marked": "0.7.2",
    "@types/react": "16.9.13",
    "@types/react-dom": "16.9.4",
    "@types/webscopeio__react-textarea-autocomplete": "2.3.1",
