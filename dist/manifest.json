{
  "name": "Marktone",
  "version": "1.0.5",
  "manifest_version": 2,
  "description": "Change a Rich Text input area to Markdown input area on kintone",
  "homepage_url": "https://github.com/ganta/chrome-extension-marktone",
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "page_action": {
    "default_icon": {
      "16": "icons/icon16.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    },
    "default_title": "Marktone"
  },
  "permissions": [
    "declarativeContent",
    "tabs",
    "activeTab",
    "https://*.cybozu.com/k/*",
    "https://*.cybozu-dev.com/k/*"
  ],
  "content_scripts": [
    {
      "matches": [
        "https://*.cybozu.com/k/*",
        "https://*.cybozu-dev.com/k/*"
      ],
      "js": [
        "js/content.js"
      ]
    },
    {
      "matches": [
        "https://*.cybozu.com/k/*",
        "https://*.cybozu-dev.com/k/*"
      ],
      "css": [
        "css/content.css"
      ]
    }
  ],
  "background": {
    "scripts": ["js/background.js"],
    "persistent": false
  }
}
